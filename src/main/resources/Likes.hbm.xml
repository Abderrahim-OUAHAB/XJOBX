<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
     <!-- Mapping for Likes -->
    <class name="MesBeans.Likes" table="Likes">
        <id name="idLike" column="id_like" type="integer">
            <generator class="identity"/>
        </id>
        <property name="idUtilisateur" column="id_utilisateur" type="integer"/>
        <property name="idOffre" column="id_offre" type="integer"/>
        <property name="dateLike" column="date_like" type="timestamp"/>
    </class>
</hibernate-mapping>

