<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
      <!-- Mapping for Offres -->
    <class name="MesBeans.Offres" table="Offres">
        <id name="idOffre" column="id_offre" type="integer">
            <generator class="identity"/>
        </id>
        <property name="titre" column="titre" type="string"/>
        <property name="description" column="description" type="string"/>
        <property name="competences" column="competences" type="string"/>
        <property name="datePublication" column="date_publication" type="date"/>
        <property name="idRecruteur" column="id_recruteur" type="integer"/>
        <property name="dateCreation" column="date_creation" type="timestamp"/>
    </class>
</hibernate-mapping>

