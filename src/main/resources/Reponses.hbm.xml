<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="MesBeans.Reponses" table="Reponses">
        <id name="idReponse" column="id_reponse" type="integer">
            <generator class="identity"/>
        </id>
        <property name="idUtilisateur" column="id_utilisateur" type="integer"/>
        <property name="idCommentaire" column="id_commentaire" type="integer"/>
        <property name="contenu" column="contenu" type="text"/>
        <property name="dateReponse" column="date_reponse" type="timestamp"/>
    </class>
</hibernate-mapping>
