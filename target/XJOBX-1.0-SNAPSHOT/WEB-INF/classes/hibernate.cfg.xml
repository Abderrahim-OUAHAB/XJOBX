<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/XJOBX</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.connection.password">Mysql2004.</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        
        <mapping resource="Candidatures.hbm.xml"/>
        <mapping class="MesBeans.Candidatures"/>
        
         <mapping resource="Likes.hbm.xml"/>
        <mapping class="MesBeans.Likes"/>
        
          <mapping resource="Utilisateurs.hbm.xml"/>
        <mapping class="MesBeans.Utilisateurs"/>
        
           <mapping resource="Offres.hbm.xml"/>
        <mapping class="MesBeans.Offres"/>
        
         <mapping resource="Offres_Enregistrees.hbm.xml"/>
        <mapping class="MesBeans.OffresEnregistrees"/>
        
          <mapping resource="Profils.hbm.xml"/>
        <mapping class="MesBeans.Profils"/>
        
    </session-factory>
</hibernate-configuration>
