<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
      <!-- Mapping for Utilisateurs -->
    <class name="MesBeans.Utilisateurs" table="Utilisateurs">
        <id name="idUtilisateur" column="id_utilisateur" type="integer">
            <generator class="identity"/>
        </id>
        <property name="nom" column="nom" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="motDePasse" column="mot_de_passe" type="string"/>
        <property name="role" column="role" type="string"/>
        <property name="photoProfil" column="photo_profil" type="string"/>
        <property name="dateCreation" column="date_creation" type="timestamp"/>
    </class>
</hibernate-mapping>

