<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <!-- Mapping for Candidatures -->
    <class name="MesBeans.Candidatures" table="Candidatures">
        <id name="idCandidature" column="id_candidature" type="integer">
            <generator class="identity"/>
        </id>
        <property name="idUtilisateur" column="id_utilisateur" type="integer"/>
        <property name="idOffre" column="id_offre" type="integer"/>
        <property name="datePostulation" column="date_postulation" type="date"/>
        <property name="statut" column="statut" type="string"/>
        <property name="dateCreation" column="date_creation" type="timestamp"/>
    </class>
</hibernate-mapping>

